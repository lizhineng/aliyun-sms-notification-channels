{
    "name": "lizhineng/notification-channel-aliyun-sms",
    "description": "Aliyun SMS Notification Channel for Laravel.",
    "keywords": [
        "aliyun sms",
        "laravel",
        "laravel notification channel"
    ],
    "homepage": "https://github.com/lizhineng/notification-channel-aliyun-sms",
    "license": "MIT",
    "authors": [
        {
            "name": "Li Zhineng",
            "email": "im@zhineng.li"
        }
    ],
    "require": {
        "php": "^8.0",
        "alibabacloud/dysmsapi-20170525": "^2.0",
        "illuminate/notifications": "^9.0",
        "illuminate/support": "^9.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Zhineng\\NotificationChannels\\AliyunSms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zhineng\\NotificationChannels\\AliyunSms\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Zhineng\\NotificationChannels\\AliyunSms\\AliyunSmsServiceProvider"
            ]
        }
    }
}
